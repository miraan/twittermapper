      </div>
      <nav class="navbar navbar-custom">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" ng-click="showTiles()">OxTwi</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <ul class="nav navbar-nav navbar-left">
              <li class="{{getState('#/map')}}"><a href="#/map">Map</a></li>
              <li class="{{getState('#/timeline')}}"><a href="#/timeline">Timeline</a></li>
              <li class="{{getState('#/geochart')}}"><a href="#/geochart">GeoChart</a></li>
              <li class="{{getState('#/wordcloud')}}"><a href="#/wordcloud">Word Cloud</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-left">
              <li><a>Selected product:</a></li>
              <li class="dropdown dropdown-middle active">
                <a role="button" aria-expanded="false" ng-click="toggleCategories()">
                  {{products.currentTopic| capitalize}}
                <ul class="dropdown-menu" role="menu">
                  <li ng-show="false" ng-repeat="topic in products.topics" class="{{getTopicClass(topic)}}" >
                    <a href="{{getLink()}}" ng-click="selecTopic($index)">{{topic| capitalize}}</a>
                  </li>
                  <li ng-show="showCategories" ng-repeat="topic in products.topics" class="{{getTopicClass(topic)}}" >
                    <a href="{{getLink()}}" ng-click="selecTopic($index)">{{topic| capitalize}}</a>
                  </li>
                  <li ng-show="!showCategories" ng-repeat="topicOption in products.currentTopicOptions" class="{{getProductClass($index)}}">
                    <a href="{{getLink()}}" ng-click="selectOption($index)">{{topicOption| capitalize}}</a>
                  </li>
                </ul>
              </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="{{stockBtnClass()}}" ng-if="products.isCurrentView('#/timeline')"><a href="{{getLink()}}" ng-click="showStock()">Stock</a></li>
                <li class="{{demandBtnClass()}}" ng-if="!products.isCurrentView('#/wordcloud')"><a href="{{getLink()}}" ng-click="makeDemand()">Demand</a></li>
                <li class="{{sentimentBtnClass()}}" ng-if="!products.isCurrentView('#/wordcloud')"><a href="{{getLink()}}" ng-click="makeSentiment()">Sentiment</a></li>
                <li><div class="slider"><input type="range" min="{{products.slider.min}}" max="{{products.slider.max}}" 
                step="{{products.slider.step}}" ng-model="products.slider.value" ng-change="evalSlide()" 
                ng-mouseup="products.slider.newValue = products.slider.value"></div></li>
                <li><div class="sliderValue"> {{products.slider.text | capitalize}} </div></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
    <ui-view></ui-view>
  </body>
</html>